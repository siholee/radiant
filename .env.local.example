# Local Development Environment Variables
# Copy this to .env.local for development

# Database (Local Docker)
DATABASE_URL="postgresql://radiant:devpassword123@localhost:5432/radiant_dev?schema=public"

# Redis (Local Docker)
REDIS_URL="redis://:devredis123@localhost:6379"

# Session & Authentication (Development - generate your own for production)
SESSION_SECRET="dev-session-secret-min-32-characters-long-string-here-change-this"
JWT_SECRET="dev-jwt-secret-min-32-characters-long-string-here-change-this"
JWT_EXPIRES_IN="7d"

# Email Configuration (Get free API key from https://resend.com)
# For local testing, emails will be shown in logs if RESEND_API_KEY is not set
RESEND_API_KEY=""

# API URLs (Local Development)
NEXT_PUBLIC_GRAPHQL_ENDPOINT="http://localhost:3000/api/graphql"
NEXT_PUBLIC_API_URL="http://localhost:3000/api"

# Node Environment
NODE_ENV="development"

# Locale Settings
NEXT_PUBLIC_DEFAULT_LOCALE="ko"
NEXT_PUBLIC_FALLBACK_LOCALE="ko"
