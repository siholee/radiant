# Database Configuration
POSTGRES_PASSWORD=change_me_to_strong_password
DATABASE_URL=postgresql://radiant:${POSTGRES_PASSWORD}@postgres:5432/radiant

# Redis Configuration
REDIS_PASSWORD=change_me_to_strong_redis_password
REDIS_URL=redis://:${REDIS_PASSWORD}@redis:6379
REDIS_QUEUE_URL=redis://:${REDIS_PASSWORD}@redis:6379/1

# Authentication Secrets (Generate with: openssl rand -hex 64)
SESSION_SECRET=change_me_to_random_64_char_hex_string
JWT_SECRET=change_me_to_random_64_char_hex_string
JWT_EXPIRES_IN=7d

# Encryption Keys (Generate with: openssl rand -hex 32)
ENCRYPTION_KEY_VERSION=1
ENCRYPTION_KEY_V1=change_me_to_random_32_char_hex_string
ENCRYPTION_KEY_V2=

# Application URLs
NEXT_PUBLIC_GRAPHQL_ENDPOINT=https://yurasis.com/api/graphql
NEXT_PUBLIC_API_URL=https://yurasis.com/api
NEXTAUTH_URL=https://yurasis.com

# Python Scripts
PYTHON_CREWAI_SCRIPT_PATH=/app/python/crewai/blog_generator.py

# Jina Reader API
JINA_READER_BASE_URL=https://r.jina.ai

# Embedding Model
EMBEDDING_MODEL=text-embedding-3-small

# Environment
NODE_ENV=production
