# ==========================================
# SECURITY WARNING: REQUIRED ENVIRONMENT VARIABLES
# Docker Compose will fail without these variables
# Generate strong passwords with: openssl rand -base64 32
# ==========================================

# Database Configuration (REQUIRED)
DATABASE_URL="postgresql://radiant:YOUR_STRONG_PASSWORD_HERE@postgres:5432/radiant?schema=public"
POSTGRES_PASSWORD="YOUR_STRONG_PASSWORD_HERE"  # Min 20 chars, use: openssl rand -base64 24

# Redis Configuration (REQUIRED)
REDIS_URL="redis://:YOUR_REDIS_PASSWORD_HERE@redis:6379"
REDIS_PASSWORD="YOUR_REDIS_PASSWORD_HERE"      # Min 20 chars, use: openssl rand -base64 24

# Session & Authentication (REQUIRED)
SESSION_SECRET="YOUR_SESSION_SECRET_HERE"      # Min 32 chars, use: openssl rand -hex 32
JWT_SECRET="YOUR_JWT_SECRET_HERE"              # Min 32 chars, use: openssl rand -hex 32
JWT_EXPIRES_IN="7d"

# Email Configuration (REQUIRED for auth features)
RESEND_API_KEY="re_xxxxxxxxxxxxxxxxxxxxxxxxxxxxx"  # Get from https://resend.com/api-keys

# API URLs (Update for production)
NEXT_PUBLIC_GRAPHQL_ENDPOINT="https://yurasis.com/api/graphql"
NEXT_PUBLIC_API_URL="https://yurasis.com/api"

# CrewAI Python Script (Optional)
PYTHON_CREWAI_SCRIPT_PATH="/app/python/crewai/blog_generator.py"

# Node Environment
NODE_ENV="production"

# Locale Settings (Optional)
NEXT_PUBLIC_DEFAULT_LOCALE="ko"
NEXT_PUBLIC_FALLBACK_LOCALE="ko"
